name 's6'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.0.1-1',
    checksum: '1ab7f65c7b5c058cb22606310c8b98230b50cb2e500215ac892359135e0a45b9'
  },
  execline: {
    version: '2.3.0.3-1',
    checksum: '676b2f73a1e8131940ee39fcf444728f23e6de7e1ad09bd354f3cc0e78a70a9e'
  }
)

with_flags = %w(skalibs execline).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  :"with-sysdeps=#{dep(:skalibs)}/usr/lib/skalibs/sysdeps" => nil,
  **with_flags
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
