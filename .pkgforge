name 's6'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.4.0-1',
    checksum: '00d8128bc935f5175c9f24258532593d2b156f0551feec3457abcf48a61cef93'
  },
  execline: {
    version: '2.5.0.0-1',
    checksum: 'cd55280a95abdb992d3acddaac614cb7d8a1d8733b5f41acf82b1f842d449141'
  }
)

with_flags = %w(skalibs execline).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  :"with-sysdeps=#{dep(:skalibs)}/usr/lib/skalibs/sysdeps" => nil,
  **with_flags
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
