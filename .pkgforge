name 's6'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.5.1.1-1',
    checksum: '1a4947186b8a19047258f76f2b297f6d301a48147b14e61ba093b4462d19ce9f'
  },
  execline: {
    version: '2.3.0.1-2',
    checksum: 'df14902f5019c75467f8facdfc5ee8262246534b616fd6bc30cab66f586de73c'
  }
)

with_flags = %w(skalibs execline).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  :"with-sysdeps=#{dep(:skalibs)}/usr/lib/skalibs/sysdeps" => nil,
  **with_flags
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
