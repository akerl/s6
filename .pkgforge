name 's6'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.0.2-1',
    checksum: '98ce366ca6a1f7876c78cf1c2b694ad13f8d735962a1c01b1e0bc73e66f3a1c7'
  },
  execline: {
    version: '2.3.0.3-2',
    checksum: 'acfcd9b7a1fcd6d2d1fb9f3eb2c3e537aae5e8431bf2605f0be466d28181f3a3'
  }
)

with_flags = %w(skalibs execline).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  :"with-sysdeps=#{dep(:skalibs)}/usr/lib/skalibs/sysdeps" => nil,
  **with_flags
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
