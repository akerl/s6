name 's6'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.3.0-1',
    checksum: '5c5a8d96155758c0722bf38bffbcb28945d2b052d4aa02f38b7d648c1e390a6d'
  },
  execline: {
    version: '2.3.0.4-2',
    checksum: 'e034fcba7f77d788eed0d0978a29737c32743dc8e229a0d821e720c6a3533713'
  }
)

with_flags = %w(skalibs execline).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  libexecdir: '/usr/lib',
  :"with-sysdeps=#{dep(:skalibs)}/usr/lib/skalibs/sysdeps" => nil,
  **with_flags
)

harden

build do
  configure
  make
  install
end

test do
  # TODO: tests
end
